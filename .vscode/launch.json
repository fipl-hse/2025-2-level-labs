    "version": "0.2.0",
    "configurations": [
        {
            "name": "[GITHUB] Update forks",
            "type": "debugpy",
            "request": "launch",
            "program": "config/github/update_forks.py",
            "args": [
                "--config", "config/github/update_fork_config.json"
            ],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Launch seminar 1",
            "type": "debugpy",
            "request": "launch",
            "program": "seminars/practice_1_run_debug.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Launch seminar 2",
            "type": "debugpy",
            "request": "launch",
            "program": "seminars/practice_2_integers.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Launch seminar 3",
            "type": "debugpy",
            "request": "launch",
            "program": "seminars/practice_3_conditions.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Launch seminar 4",
            "type": "debugpy",
            "request": "launch",
            "program": "seminars/practice_4_strings.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Launch LAB 1 start",
            "type": "debugpy",
            "request": "launch",
            "program": "start.py",
            "cwd": "${workspaceFolder}/lab_1_keywords_tfidf",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Run tests",
            "type": "debugpy",
            "request": "launch",
            "program": "config/run_tests.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "args":[
                "--pr-name", "test",
                "--pr-author", "test"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}
